{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",    // Backend API di folder /api
      "use": "@vercel/node"
    },
    {
      "src": "pages/**/*.js",  // Frontend di folder /pages
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/youtube",   // Routing untuk API youtube
      "dest": "/api/youtube.js"
    },
    {
      "src": "/(.*)",           // Routing untuk frontend
      "dest": "/pages/$1"
    }
  ]
}
